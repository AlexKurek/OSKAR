
<s key="simulator" label="Simulator settings">
    <s 
        key="double_precision" label="Use double precision"
        type="bool" default="true"
        description="Determines whether double precision arithmetic is used."
    />
    <s 
        key="keep_log_file" label="Keep log file"
        type="bool"  default="false"
        description="Determines whether a log file of the run will be kept on
            disk. Note that even if this option is set to false, log files will 
            be stored in any OSKAR binary data files produced by the simulator."
    />
    <s 
        key="max_sources_per_chunk" label="Keep log file"
        type="IntPositive" default="16384"
        description="Maximum number of sources processed concurrently on a 
            single GPU."
    />
    <s 
        key="cuda_device_ids" label="CUDA device IDs to use"
        type="IntListExt" default="all"
        description="A comma-separated string containing device (GPU) IDs to 
            use on a multi-GPU system, or 'all' to use all devices."
    />
</s>
